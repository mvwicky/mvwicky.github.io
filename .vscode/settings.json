{
  "files.exclude": {
    ".jekyll-*": true,
    "_site": false,
    "dist": false,
    "node_modules": true,
    "*.sublime-*": true,
    "vendor": true,
    ".cache": true,
    ".nojekyll": true
  },
  "files.associations": {
    "*.html": "jekyll"
  },
  "editor.tabSize": 2,
  "scss.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  },
  "python.pythonPath": "/Users/michael/.pyenv/versions/blog-3.8.1/bin/python",
  "[python]": {
    "editor.tabSize": 4
  },
  "yaml.schemas": {
    "./assets/reading-schema.json": "_data/reading.yml"
  },
  "spellright.language": [
    "en"
  ],
  "spellright.documentTypes": [
    "markdown",
    "latex",
    "plaintext",
    "jinja-md"
  ],
  "spellright.parserByClass": {
    "jinja-md": {
      "parser": "markdown"
    }
  }
}
