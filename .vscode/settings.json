{
  "files.exclude": {
    ".jekyll-*": true,
    "_site": true,
    "dist": true,
    "node_modules": true,
    "*.sublime-*": true,
    "vendor": true,
    ".nojekyll": true
  },
  "files.associations": {
    "*.html": "jekyll"
  },
  "editor.tabSize": 2,
  "scss.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  }
}
